<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonRed" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/PearlPink</item>
        <item name="colorButtonNormal">@color/Vermilion</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonBlue" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/Turquoise</item>
        <item name="colorButtonNormal">@color/Azure</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonViolet" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/Lilac</item>
        <item name="colorButtonNormal">@color/Violet</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
